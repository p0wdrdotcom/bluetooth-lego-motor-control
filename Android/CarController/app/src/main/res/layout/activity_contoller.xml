<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.p0wdr.apps.carcontroller.ContollerActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/disconnect"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motor A Forward"
        android:id="@+id/motoraforward"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motor A Reverse"
        android:id="@+id/motorareverse"
        android:layout_below="@+id/motorastop"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/motorastop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motor A Stop"
        android:id="@+id/motorastop"
        android:layout_alignTop="@+id/accel_ctrl"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/motoraforward" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/xAccel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y"
        android:id="@+id/yAccel"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/xAccel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z"
        android:id="@+id/zAccel"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/yAccel" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer Control"
        android:textOn="on"
        android:textOff="off"
        android:id="@+id/accel_ctrl"
        android:checked="false"
        android:layout_below="@+id/disconnect"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
